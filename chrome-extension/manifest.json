{
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "name": "Vocify - Voice to CRM",
  "version": "1.0.0",
  "description": "Update your CRM by speaking. Press Alt+Shift+V to record a voice memo.",
  "permissions": [
    "storage",
    "activeTab",
    "offscreen",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.hubspot.com/*",
    "http://localhost:8888/*",
    "ws://localhost:8888/*",
    "https://app.getvocify.com/*",
    "wss://app.getvocify.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "popup/index.html"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Alt+Shift+V"
      },
      "description": "Start/Stop voice recording"
    }
  },
  "offline_enabled": false
}
